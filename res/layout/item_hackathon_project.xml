<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/iv_hackathon"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"/>

    <com.mattkula.resume.NotifyingHorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/scrollview"
                  android:fillViewport="true"
                  android:scrollbars="none"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:orientation="horizontal">

        <Space android:layout_width="250dp"
               android:layout_height="match_parent"/>

        <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="20dp"
                      android:id="@+id/colorizer"
                      android:alpha="0.9"
                      android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_hackathon_project_title"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text=""
                    android:textSize="20sp"/>

            <View android:layout_width="200dp"
                  android:layout_height="1dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:background="@android:color/white"/>

            <TextView
                    android:id="@+id/tv_hackathon_description"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text=""
                    android:textSize="18sp"/>

            <TextView
                    android:id="@+id/tv_hackathon_name"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/white"
                    android:text=""
                    android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:paddingRight="12dp"
                android:id="@+id/colorizer2"
                android:alpha="0.9"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/ib_youtube"
                    android:background="@null"
                    android:src="@drawable/youtube"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            <ImageButton
                    android:id="@+id/ib_github"
                    android:background="@null"
                    android:src="@drawable/icon_github"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

        </LinearLayout>
    </LinearLayout>

    </com.mattkula.resume.NotifyingHorizontalScrollView>

</FrameLayout>